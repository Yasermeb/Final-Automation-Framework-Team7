<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="luma magento">
    <parameter name="useCloudEnv" value="false"></parameter>

    <parameter name="envName" value="browserstack"></parameter>
    <parameter name="os" value="windows"></parameter>
    <parameter name="osVersion" value="10"></parameter>
    <parameter name="browserVersion" value="100"></parameter>

    <parameter name="browserName" value="chrome"></parameter>
    <parameter name="url" value="https://magento.softwaretestingboard.com/"></parameter>
    <test name="luma tests">
        <classes>

            <class name="magento.test.AddToCart"></class>
            <class name="magento.test.CreateAnAccountTest"></class>
            <class name="magento.test.ForgotPassword"></class>
            <class name="magento.test.MyAccountTest"></class>
            <class name="magento.test.PurchaseTest"></class>
            <class name="magento.test.SignIn"></class>
            <class name="magento.test.SignOut"></class>
            <class name="magento.test.TestSearch"></class>



        </classes>
    </test>
</suite>